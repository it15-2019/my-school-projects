<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:padding="5dp">

    <TextView
        android:id="@+id/itemNameTv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Item name"
        android:textColor="@color/colorBlack"
        android:textStyle="italic" />

    <TextView
        android:id="@+id/itemPriceEachTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/itemNameTv"
        android:gravity="center"
        android:text="Item price"
        android:textColor="@color/colorBlack"
        android:textStyle="italic" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/itemNameTv"
        android:layout_centerHorizontal="true">

        <TextView
            android:id="@+id/itemPriceTotalTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="$100"
            android:textColor="@color/colorBlack"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/itemQuantityTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="4dp"
            android:text="[2]"
            android:textColor="@color/colorBlack"
            android:textStyle="bold"/>
    </LinearLayout>

    <TextView
        android:id="@+id/itemRemoveTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/itemNameTv"
        android:layout_alignParentEnd="true"
        android:src="@drawable/ic_trash_white"
        android:text="Remove"
        android:textColor="@color/colorPrimary"
        android:textStyle="bold" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/itemRemoveTv"
        android:layout_marginTop="4dp"
        android:background="@color/colorPrimary" />

</RelativeLayout>